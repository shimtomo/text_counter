{
    "manifest_version": 3,
    "name": "Text Counter",
    "version": "1.0",
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "description": "Counts characters in selected text",
    "background": {
      "service_worker": "background.js"
    },
    "permissions": ["contextMenus"],
    "action": {
      "default_popup": "popup.html"
    }
}

  